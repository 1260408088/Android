       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:textColor="#000"
       android:textSize="18sp"
       android:layout_margin="5dp"
       android:text="您的手机防盗卫士"
       />
   <TextView 
       style="@style/listTheme"
       android:text="sim卡变更报警"
       />
