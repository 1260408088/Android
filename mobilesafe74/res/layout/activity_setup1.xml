       style="@style/listTheme"
       android:text="远程锁屏"
       />
      <!-- 让内部点的控件水平居中 -->
      <LinearLayout 
          android:gravity="center_horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
          <ImageView 
              android:background="@android:drawable/presence_online"
              android:layout_height="wrap_content"
