<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:text="设置中心"
        style="@style/TitalTheme"
        />

        <com.itheima.mobilesafe.view.SettingItemView
            xmlns:mobilesafe="http://schemas.android.com/apk/res/com.itheima.mobilesafe"
            android:id="@+id/siv_update"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            mobilesafe:destitle="自动更新设置"
            mobilesafe:desoff="自动更新已关闭"
            mobilesafe:deson="自动更新已开启"
            >
        </com.itheima.mobilesafe.view.SettingItemView>
        
         <com.itheima.mobilesafe.view.SettingItemView
            xmlns:mobilesafe="http://schemas.android.com/apk/res/com.itheima.mobilesafe"
            android:id="@+id/siv_adress"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            mobilesafe:destitle="来电归属地显示设置"
            mobilesafe:desoff="显示已关闭"
            mobilesafe:deson="显示已开启"
            >
        </com.itheima.mobilesafe.view.SettingItemView>
        
          <com.itheima.mobilesafe.view.SettingToastView
            android:id="@+id/scv_style"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >
        </com.itheima.mobilesafe.view.SettingToastView>
        
          <com.itheima.mobilesafe.view.SettingToastView
            android:id="@+id/scv_location"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >
        </com.itheima.mobilesafe.view.SettingToastView>
        
          <com.itheima.mobilesafe.view.SettingItemView
            xmlns:mobilesafe="http://schemas.android.com/apk/res/com.itheima.mobilesafe"
            android:id="@+id/siv_blacknumber"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            mobilesafe:destitle="黑名单拦截设置"
            mobilesafe:desoff="拦截已关闭"
            mobilesafe:deson="拦截已开启"
            >
        </com.itheima.mobilesafe.view.SettingItemView>
        
          <com.itheima.mobilesafe.view.SettingItemView
            xmlns:mobilesafe="http://schemas.android.com/apk/res/com.itheima.mobilesafe"
            android:id="@+id/siv_app_lock"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            mobilesafe:destitle="程序锁设置"
            mobilesafe:desoff="程序锁已关闭"
            mobilesafe:deson="程序锁已开启"
            >
        </com.itheima.mobilesafe.view.SettingItemView>
        
        
         
        
</LinearLayout>