<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
       style="@style/TitalTheme"
       android:text="2.手机卡绑定"
       />
   <TextView 
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:textColor="#000"
       android:textSize="18sp"
       android:layout_margin="5dp"
       android:text="通过绑定sim卡:\n 下次重启手机如果发现sim卡变化，就会发短信报警"
       />
    
        <com.itheima.mobilesafe.view.SettingItemView
            xmlns:mobilesafe="http://schemas.android.com/apk/res/com.itheima.mobilesafe"
            android:id="@+id/siv_sim_bound"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            mobilesafe:destitle="点击绑定sim卡"
            mobilesafe:deson="sim卡已绑定"
            mobilesafe:desoff="sim卡未绑定"
            >
        </com.itheima.mobilesafe.view.SettingItemView>

      <LinearLayout 
          android:gravity="center_horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
          
          <ImageView 
              android:background="@android:drawable/presence_invisible"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              />
          <ImageView 
              android:background="@android:drawable/presence_online"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              />
          <ImageView 
              android:background="@android:drawable/presence_invisible"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              /><ImageView 
              android:background="@android:drawable/presence_invisible"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              />
          </LinearLayout>
	      <RelativeLayout 
	          android:layout_height="match_parent"
	          android:layout_width="match_parent"
	          >
          <ImageView 
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:background="@drawable/bind"
              android:layout_centerInParent="true"
              />
          <Button 
             style="@style/nexButTheme"
            
              />
          <Button 
              
              style="@style/preButTheme"/>
              
             
          
      </RelativeLayout>

</LinearLayout>